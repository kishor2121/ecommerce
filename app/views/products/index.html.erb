<div class="container mt-4">
  <div class="row align-items-center mb-4">
    <div class="col-md-6">
      <h6 class="display-4" style="font-size: 1.5rem;">𝘼𝙫𝙖𝙡𝙞𝙖𝙗𝙡𝙚 𝙋𝙧𝙤𝙙𝙪𝙘𝙩𝙨 𝙡𝙞𝙨𝙩</h6>

    </div>
    <div class="col-md-6 text-right">
      <%= link_to 'Create New Product', new_product_path, class: 'btn btn-success' %>
    </div>
  </div>

  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <% if product.image.attached? %>
            <%= image_tag product.image, class: "card-img-top", alt: product.name %>
          <% else %>
            <img src="default_image_url" class="card-img-top" alt="Default Image">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description.to_plain_text %></p>
            <a href="<%= product_path(product) %>" class="btn btn-primary">View Product</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
